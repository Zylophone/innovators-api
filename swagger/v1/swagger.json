{
  "swagger": "2.0",
  "info": {
    "name": "API V1",
    "version": "v1"
  },
  "basePath": "/api/v1",
  "paths": {
    "/events": {
      "get": {
        "summary": "Retrieves all events",
        "tags": [
          "Events"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "event found"
          }
        }
      },
      "post": {
        "summary": "Creates a event",
        "tags": [
          "Events"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "event",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "content"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "event created"
          },
          "422": {
            "description": "invalid request"
          }
        }
      }
    },
    "/events/{id}": {
      "get": {
        "summary": "Retrieves a event",
        "tags": [
          "Events"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "event found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "name",
                "content"
              ]
            }
          },
          "404": {
            "description": "event not found"
          },
          "406": {
            "description": "unsupported accept header"
          }
        }
      }
    }
  }
}